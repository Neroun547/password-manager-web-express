<form class="wrapper__form" id="create-password-form">
    <input type="text" placeholder="Призначення паролю:">
    <input type="text" placeholder="Пароль:">
    <button>Створити пароль</button>
</form>

<div class="wrapper__response-message">

</div>

<div class="wrapper__passwords">
    {{#each passwords}}
        <div class="wrapper__passwords-item" id="{{this.id}}">
            <span class="wrapper__passwords-item-description-span">Призначення: {{this.description}}</span>
            <span class="wrapper__passwords-item-password-span">Пароль: {{this.password}}</span>
            <button class="wrapper__passwords-item-delete-btn">Видалити</button>
            <form class="wrapper__passwords-item-edit-password-form">
                <input type="text" placeholder="Призначення паролю:" value="{{this.description}}" required>
                <input type="text" placeholder="Новий пароль:" value="{{this.password}}" required>
                <button type="submit">Зберегти зміни</button>
            </form>
            <div class="wrapper__password-item-edit-password-form-message">

            </div>
            <button class="wrapper__passwords-item-edit-password-button">Редагувати</button>
        </div>
    {{/each}}
</div>

{{#if loadMore}}
    <button class="load-more-btn">Завантажити ще</button>
{{/if}}

